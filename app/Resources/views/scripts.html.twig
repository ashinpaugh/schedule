{##
 # Libraries.
 #}
{% javascripts
    'assets/vendor/jquery/dist/jquery.min.js'
    'assets/vendor/jquery-ui/jquery-ui.min.js'
    'assets/vendor/bootstrap/dist/js/bootstrap.js'
    'assets/vendor/moment/min/moment.min.js'
    'assets/vendor/fullcalendar/dist/fullcalendar.min.js'
    'assets/vendor/chosen/chosen.jquery.js'
    'assets/vendor/qtip2/jquery.qtip.min.js'
    'assets/vendor/spectrum/spectrum.js'
    filter='?jsqueeze'
    output='assets/compiled/js/libraries.js'
%}
    {% if 'dev' == app.environment %}
        <script>{{ inline_resource(asset_url)|raw }}</script>
    {% endif %}
{% endjavascripts %}

{% if 'dev' != app.environment %}
    <script>{{ inline_resource('assets/compiled/js/libraries.js')|raw }}</script>
{% endif %}

{% set standard_urls  = [] %}
{% set standard_count = 0  %}
{% set ie_urls        = [] %}
{% set ie_count       = 0  %}

{##
 # App-wide utils.
 #}
{% javascripts '@ATSScheduleBundle/Resources/public/js/util/*.es6'
    filter='?jsqueeze'
    output='assets/compiled/js/utils.js'
%}
    {% set standard_urls  = standard_urls|merge({ (standard_count): asset_url}) %}
    {% set standard_count = standard_count + 1 %}
{% endjavascripts %}

{% javascripts '@ATSScheduleBundle/Resources/public/js/util/*.js'
    filter='?jsqueeze'
    output='assets/compiled/js/legacy-utils.js'
%}
    {% set ie_urls  = ie_urls|merge({ (ie_count): asset_url}) %}
    {% set ie_count = ie_count + 1 %}
{% endjavascripts %}

{% include 'components/script.html.twig' with {
    'standard_urls':     standard_urls,
    'ie_urls':           ie_urls,
    'prod_standard_url': 'assets/compiled/js/utils.js',
    'prod_ie_url':       'assets/compiled/js/legacy-utils.js'
} %}

{% set standard_urls  = [] %}
{% set standard_count = 0  %}
{% set ie_urls        = [] %}
{% set ie_count       = 0  %}

{##
 # Page resources.
 #}
{% block javascripts %}
    {% javascripts '@ATSScheduleBundle/Resources/public/js/controller/Default/*.es6'
        filter='?jsqueeze'
        output='assets/compiled/js/controllers.js'
    %}
        {% set standard_urls  = standard_urls|merge({ (standard_count): asset_url}) %}
        {% set standard_count = standard_count + 1 %}
    {% endjavascripts %}
    
    {% javascripts '@ATSScheduleBundle/Resources/public/js/controller/Default/*.js'
        filter='?jsqueeze'
        output='assets/compiled/js/legacy-controllers.js'
    %}
        {% set ie_urls  = ie_urls|merge({ (ie_count): asset_url}) %}
        {% set ie_count = ie_count + 1 %}
    {% endjavascripts %}
    
    {% include 'components/script.html.twig' with {
        'standard_urls':     standard_urls,
        'ie_urls':           ie_urls,
        'prod_standard_url': 'assets/compiled/js/controllers.js',
        'prod_ie_url':       'assets/compiled/js/legacy-controllers.js'
    } %}
{% endblock %}