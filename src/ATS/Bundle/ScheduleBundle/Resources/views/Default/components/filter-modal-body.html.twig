<div class="container-fluid">
    <script type="application/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            GlobalUtils.setSemesters({{ render(controller('ATSScheduleBundle:Term:cget', {
                '_format': 'json'
            })) }});
            
            GlobalUtils.setSubjects({{ render(controller('ATSScheduleBundle:Subject:cget', {
                '_format': 'json'
            })) }});
            
            GlobalUtils.setInstructors({{ render(controller('ATSScheduleBundle:Instructor:cgetBySubject', {
                '_format': 'json'
            })) }});
        });
    </script>
    
    <div class="row">
        <label for="term" class="cold-sm-4 control-label">Semester</label>
        
        <div class="cold-sm-4">
            <select id="term" class="chosen-select form-control" data-placeholder="Semester..." required>
                <option></option>
            </select>
        </div>
        
        <div class="cold-sm-4">
            <select id="term-block" class="chosen-select form-control hidden" data-placeholder="Module..." multiple="" required>
                <option></option>
            </select>
        </div>
    </div>
    
    <div class="row">
        <label for="subject" class="cold-sm-4 control-label">Subject</label>
        
        <div class="cold-sm-4">
            <select id="subject" class="chosen-select form-control" data-placeholder="Subject..." multiple="" required>
                <option></option>
            </select>
        </div>
        
        <div class="cold-sm-4">
            <select id="number" class="chosen-select form-control hidden" data-placeholder="Course..." multiple="">
                <option></option>
            </select>
        </div>
    </div>
    
    <div class="row">
        <label for="instructor" class="cold-sm-4 control-label">Instructor</label>
        
        <div class="cold-sm-8">
            <select id="instructor" class="chosen-select form-control" data-placeholder="Instructor..." multiple="">
                <option></option>
            </select>
        </div>
    </div>
</div>